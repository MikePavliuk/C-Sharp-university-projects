@model RegisterViewModel
@{
    string strTitle = "Registration";
    string strDescription = "";
    ViewBag.Title = strTitle;
    ViewBag.Description = strDescription;
}
<div class="register padding-hoz">
    <h1>@strTitle</h1>
    <div>
        <form asp-route="default"
              asp-route-controller="@nameof(AccountController).CutController()"
              asp-route-action="@nameof(AccountController.Register)"
              asp-route-returnUrl="@ViewBag.ReturnUrl"
              method="post">
            <div asp-validation-summary="All"></div>
            <div class="padding-ver">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="padding-ver">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="padding-ver">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="padding-ver">
                <input class="link-main" type="submit" value="Finish" />
            </div>
        </form>
    </div>
</div>

